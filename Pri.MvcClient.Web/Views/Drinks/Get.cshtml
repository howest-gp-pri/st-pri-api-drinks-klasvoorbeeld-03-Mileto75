@model DrinksGetViewModel
@{
    ViewData["Title"] = "Get";
}

@*put bootstrap card here*@
<div class="row">
    <div class="col col-lg-4 mx-auto text-center">
        <div class="card" style="width: 18rem;">
            <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
            @*<img src="..." class="card-img-top" alt="...">*@
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.AlcoholPercentage</h6>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Category.Name</h6>
                <h6 class="card-subtitle mb-2 text-muted">Properties</h6>
                @foreach (var property in Model.Properties)
                {
                    <p class="card-text"><strong>@property.Name</strong></p>
                }
                <a asp-controller="Drinks"
                   asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>

    </div>
</div>
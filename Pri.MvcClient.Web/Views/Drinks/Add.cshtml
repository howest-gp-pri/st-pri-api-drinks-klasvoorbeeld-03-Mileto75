@model DrinksAddViewModel

<div class="row">
    <div class="col col-lg-5 mx-auto border border-1 rounded rounded-2">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form asp-controller="Drinks" asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlcoholPercentage"></label>
                <input asp-for="AlcoholPercentage" class="form-control">
                <span class="text-danger" asp-validation-for="AlcoholPercentage"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PropertyIds"></label>
                <select asp-for="PropertyIds" asp-items="@Model.Properties" class="form-control"></select>
                <span class="text-danger" asp-validation-for="PropertyIds"></span>
            </div>
            <button type="submit" class="btn btn-primary mb-1 mt-1">Add</button>
        </form>
    </div>
</div>
